{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./lib",
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "./src"
  ]
}
